<!--                        <fileSet>-->
<!--                          <directory>car-owner-ui</directory>-->
<!--                          <outputDirectory>car-owner-ui</outputDirectory>-->
<!--                        </fileSet>-->
<!--                      </fileSets>-->
<!--                    </layer>-->
<!--                  </layers>-->
<!--                </assembly>-->
              </build>
            </image>
          </images>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
