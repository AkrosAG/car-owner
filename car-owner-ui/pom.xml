<!--                          <outputDirectory>/</outputDirectory>-->
<!--                        </file>-->
<!--                        <file>-->
<!--                          <source>Dockerfile</source>-->
<!--                          <outputDirectory>/</outputDirectory>-->
<!--                        </file>-->
<!--                      </files>-->
<!--                    </layer>-->
<!--                    <layer>-->
<!--                      <id>compiled sources</id>-->
